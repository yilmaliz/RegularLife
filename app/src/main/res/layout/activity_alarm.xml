<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_homescreen"
    android:orientation="vertical"
    tools:context="com.example.ali.project.AlarmActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:text="CLICK THE BUTTON TO SET  ALARM CLOCK"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnmon"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/homescreen_button"
                        android:drawableTop="@drawable/ic_alarm2"
                        android:text="Monday"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btntue"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/homescreen_button"
                        android:drawableTop="@drawable/ic_alarm2"
                        android:text="Tuesday" />

                    <Button
                        android:id="@+id/btnwed"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/homescreen_button"
                        android:drawableTop="@drawable/ic_alarm2"
                        android:text="Wednesday" />

                    <Button
                        android:id="@+id/btnthu"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/homescreen_button"
                        android:drawableTop="@drawable/ic_alarm2"
                        android:text="Thursday" />

                    <Button
                        android:id="@+id/btnfrÄ±"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/homescreen_button"
                        android:drawableTop="@drawable/ic_alarm2"
                        android:text="Friday" />

                    <Button
                        android:id="@+id/btnsat"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/homescreen_button"
                        android:drawableTop="@drawable/ic_alarm2"
                        android:text="Saturday" />

                    <Button
                        android:id="@+id/btnsun"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/homescreen_button"
                        android:drawableTop="@drawable/ic_alarm2"
                        android:text="Sunday" />

                    <Button
                        android:id="@+id/btnday"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/homescreen_button"
                        android:drawableTop="@drawable/ic_alarm2"
                        android:text="Weekday" />

                    <Button
                        android:id="@+id/btnend"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/homescreen_button"
                        android:drawableTop="@drawable/ic_alarm2"
                        android:text="Weekend" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>